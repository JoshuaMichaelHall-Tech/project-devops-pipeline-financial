# Example environment variables for local development
# Copy this file to local.env and update with your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=financial-devops

# Infrastructure Configuration
TERRAFORM_STATE_BUCKET=financial-devops-terraform-state
TERRAFORM_STATE_KEY=local/terraform.tfstate
TERRAFORM_STATE_REGION=us-east-1

# Application Configuration
APP_ENV=local
APP_PORT=8080
APP_LOG_LEVEL=debug

# Security Configuration
SCAN_THRESHOLD_CRITICAL=0
SCAN_THRESHOLD_HIGH=0
SCAN_THRESHOLD_MEDIUM=5
SCAN_THRESHOLD_LOW=10

# Docker Configuration
DOCKER_REGISTRY=local
DOCKER_IMAGE_PREFIX=financial-devops
EOF < /dev/null